<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    tools:context="com.gradetracker.se.gradetracker.MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/logo"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/bGPACalculator"
        android:layout_marginBottom="-45dp"
        android:layout_marginLeft="40dp"
        android:src="@mipmap/calculator"

        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/bViewTranscript"
        android:layout_marginBottom="-45dp"
        android:layout_marginLeft="140dp"
        android:src="@mipmap/transcript"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/bSetTarget"
        android:layout_marginBottom="-45dp"
        android:layout_marginLeft="40dp"
        android:src="@mipmap/target"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/bViewPerformance"
        android:layout_marginBottom="-45dp"
        android:layout_marginLeft="140dp"
        android:src="@mipmap/perform" />

</LinearLayout>
