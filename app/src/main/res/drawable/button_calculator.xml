<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">

    <item android:state_pressed="true">
        <shape>
            <stroke android:color="#009933" android:width="5dp" />
            <solid android:color="#ffffff" />
            <gradient android:angle="90"
                android:startColor="#99CC00"
                android:endColor="#ccff33" />
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp" />
            <corners android:radius="200dp" />
            <size android:width="150dp" android:height="150dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape><solid android:color="#ffffff" />
            <gradient android:angle="90"
                android:startColor="#99CC00"
                android:endColor="#ccff33" />
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp" />
            <corners android:radius="200dp" />
            <size android:width="150dp" android:height="150dp"/>
        </shape>
    </item>
</selector>